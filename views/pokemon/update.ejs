<%- contentFor('body') %>

<div id="pokemonList">
  <h3>Edit Pokemon: </h3>
  <form action="/pokemon/edit/<%= pokemon.id %>" method="post">
    <input type="text" name="name" value="<%= pokemon.name %>">

    <select id="trainerDD" name="trainer_id">
      <option value="<%= currTrainer[0].id %>" selected><%= currTrainer[0].name %></option>
      <% for(let i = 0; i < trainersList.length; i++) { %>
      <option value="<%= trainersList[i].id %>"><%= trainersList[i].name %></option>
      <% } %>
    </select>

    <input type="number" name="cp" value="<%= pokemon.cp %>">
    <% if(pokemon.in_gym) { %>
      <input type="radio" name="in_gym" value="true" checked>In a gym?
      <input type="radio" name="in_gym" value="false">Not in a gym?
    <% } else { %>
      <input type="radio" name="in_gym" value="true">In a gym?
      <input type="radio" name="in_gym" value="false" checked>Not in a gym?
    <% } %>
    <input id="submitForm" type="submit">
  </form>
</div>
