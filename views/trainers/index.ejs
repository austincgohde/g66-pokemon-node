<%- contentFor('body') %>

<div id="pokemonList">
  <h3>Trainers:</h3>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < trainers.length; i++) { %>
      <tr>
        <td><%= trainers[i].id %></td>
        <td><a href="/trainers/<%= trainers[i].id %>"><%= trainers[i].name %></a></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <button type="button" name="button" id="add_new">+ Add New Trainer</button>
</div>



<script type="text/javascript">
   var btn = document.getElementById("add_new");
   btn.addEventListener("click", function(){
     alert("the button works, and we see");
   })

</script>
